<h1>Lista dos restaurantes</h1>

<%= link_to "ADD A NEW RESTAURANT", new_restaurant_path, class: "btn btn-success" %>

  <% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
    <p><%= restaurant.address %></p>
    <p><%= restaurant.phone_number %></p>
    <p><%= restaurant.category %></p>
    <%= link_to "Edit restaurant's details", edit_restaurant_path(restaurant), class: "btn btn-primary"%>
    <%= link_to "Delete this restaurant", restaurant_path(restaurant), method: :delete, class: "btn btn-danger" %>
    <%= link_to "Add a new Review", restaurant_reviews_path(restaurant), class: "btn btn-success" %>
  <% end %>




