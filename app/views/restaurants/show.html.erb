<h1>Here are <%= @restaurant.name %> details </h1>

  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>



<%= @restaurant.reviews.each do |review| %>
  <p>
    <%=r eview.content %>
    <%= review.rating %>
  </p>
<% end %>

<% simple_form_for [@restaurant, @review] do |f|
  <%= f.input :content %>
  <%= f.input :rating, prompt: "What did you think of #{@restaurant.name}", collection: 0..5 %>
  <%= f.submit %>
<% end %>
